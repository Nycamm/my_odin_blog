<div id="post_show_content" class="skinny_wrapper wrapper_padding">
  <header>
    <p class="date"><%= @post.created_at.strftime('%A, %B, %d') %></p>
    <h1><%= @post.title %></h1>
    <hr>
  </header>

  <div id="content">
    <%= markdown @post.content %>
  </div>

  <% if user_signed_in? %>
    <div id="admin_links">
      <%= link_to "Edit Article", edit_post_path(@post) %>
      <%= link_to "Delete Article", post_path(@post), method: :delete, data: { confirm: "Are you sure?" } %>
    </div>
  <% end %>

  <hr>

  <div id="share_box">
    <p>Share My-Odin-Blog</p>
    <!-- Twitter -->
    <!-- <a href="https://twitter.com/share?text=<%= @post.title %>%20by%20@trevorsinnott%20-">
      <i class="fab fa-twitter"></i>
    </a>
    -->
    <a onclick="javascript:window.open('https://twitter.com/share?text=<%= @post.title %>%20by%20@trevorsinnott%20-', '_blank', 'width=800, height=500, top=200, left=300');void(0);"><i class="fab fa-twitter"></i></a>
    <!-- Facebook -->
    <a onclick="javascript:window.open('http://www.facebook.com/share.php?u=<%= url_for(only_path: false) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);"><i class="fab fa-facebook"></i></a>
  </div>

  <!-- <hr>

  <%= render 'disqus' %> -- >

</div>
